package com.techlabs.model;

public class Complex {
	
	private int x;
	private int y;
	
	
	public Complex() {
		this(5,5);
	}
	public Complex(int x,int y) {
		this.x=x;
		this.y=y;
	}
	
	public void setReal(int x) {
		this.x=x;
	}
	public int getReal() {
		return x;
	}
	public void setImaginary(int y) {
		this.y=y;
	}
	public int getImaginary() {
		return y;
	}
	
	public String Addition(Complex complex1,Complex complex2) {
		int addReal=complex1.getReal()+complex2.getReal();
		int addImaginary=complex1.getImaginary()+complex2.getImaginary();
		System.out.println(addReal+"+"+addImaginary+"i");
	}
}

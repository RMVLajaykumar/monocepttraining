package com.monocept.e;

public class Practice {
	
	 public static boolean Input(String input,int maxlength,int minlength) {
		 if(input==null||input.length()<minlength||input.length()>maxlength)
			 return false;
		return true;
	 }
	  
	 public static boolean Rollnumber(String rollno) {
		 return Input(rollno,5,10);
	 }
	 public static boolean Name(String name) {
		 return Input(name,3,30);
	 }
	 public static boolean Address(String address) {
		 if(Input(address,5,50))
			 return true;
		 if(address.contains("/")&&address.contains(","))
			 return true;
	 return false;
	 }
	 public static boolean Pno(int pno) {
		 int i=1;
		for(i=1;i<=10;i++) {
			pno+=i;
		}
		if(pno>i)
			return false;
	return true;
	 }

}

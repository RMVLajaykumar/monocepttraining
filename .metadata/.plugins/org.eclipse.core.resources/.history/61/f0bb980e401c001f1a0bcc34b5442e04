package com.techlabs.forloop;

import java.util.Scanner;

public class PigGame {

	public static void main(String[] args) {
		int score=0;
		int total_score=0;
		int noOfTurns=0;
		System.out.println("here r is roll and h is hold");
		while(total_score<=20) {
			Scanner scanner=new Scanner(System.in);
			System.out.println("Enter r or h");
			String choice=scanner.next();
			if (choice.equals("h")) {
				noOfTurns+=1;
				total_score+=score;
				System.out.println("Score for turn "+noOfTurns+" : " + score+ "\nTotal score : "+total_score);
				score=0;
			}
			else if (choice.equals("r")){
				int a=(int)(Math.random()*(6))+1;
				System.out.println("dice:"+a);
				if(a!=1) {
					score+=a;
					
				}
				else {
					noOfTurns+=1;
					System.out.println("turnover no score");
					score=0;
				}
			}
		}
		System.out.println("You won\n No of turns "+noOfTurns);

	}
}
